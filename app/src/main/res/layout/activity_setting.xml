<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="right|top"
    android:orientation="vertical"
    tools:context=".Controller.Setting">

    <TextView
        android:id="@+id/change_font_set"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="تغییر فونت"
        android:textSize="20sp"
        android:fontFamily="@font/b_yekan"
        android:textColor="@color/black"
        android:padding="10sp"
        android:background="@color/beauty_yellow"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        />

    <Button
        android:id="@+id/btn_small_font"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="small" />

    <Button
        android:id="@+id/btn_medium_font"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="medium" />

    <Button
        android:id="@+id/btn_large_font"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="large" />
</LinearLayout>